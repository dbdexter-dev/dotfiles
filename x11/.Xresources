!Color scheme to be adopted by as many applications as possible
#define BG #303149
#define TEXT #ffffff
#define INACTIVE_BG #2e3440
#define IND #cc5566
#define UNSEL #ffffff
#define URG #ee9944

polybar.bg_color: BG
polybar.text_color: TEXT
polybar.active_color: TEXT
polybar.ind_color: IND
polybar.urgent: URG

hlwm.border_color: IND
hlwm.inactive_color: BG
hlwm.urgent_color: URG

i3wm.bgcolor: BG
i3wm.fgcolor: TEXT
i3wm.indcolor: IND
i3wm.urgentcolor: URG

rofi.color-enabled: true
rofi.color-window: BG, IND, IND
rofi.color-normal: BG, UNSEL, INACTIVE_BG, IND, BG
rofi.color-active: BG, IND, INACTIVE_BG, IND, BG
rofi.color-urgent: BG, URG, INACTIVE_BG, URG, BG

rofi.font: SFNS Display 12
rofi.separator-style: solid
rofi.lines: 6
rofi.eh: 1
rofi.bw: 0
rofi.width: 500

rofi.kb-row-tab:		Shift+Tab
rofi.kb-mode-next:		Tab
rofi.kb-mode-previous:	Control+Tab

