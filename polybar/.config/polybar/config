[colors]
bg = #80000000
bg_alt = #c0000000
fg = ${xrdb:polybar.textcolor}
ind_color = ${xrdb:polybar.ind_color}
active = ${xrdb:polybar.active_color}
urgent = ${xrdb:polybar.urgent}

[bar/minimalbar]
; Background and foreground colors
background = ${colors.bg}
foreground = ${colors.fg}

; Bar position offset
offset-x = 0
offset-y = 3
border-right = 6
border-left = 6
; Corner radius
radius = 6.0

; Underline size and color
line-size = 3
line-color = ${colors.active}

; Padding at either side of the bar
padding = 3
padding-right = 18

; Fonts
font-0 = "SFNS Display:style=Regular:size=11;1"
font-1 = "FontAwesome:style=Regular:size=11;1"

; Module padding
module-margin-left = 3
module-margin-right = 3
; Modules to display, defined below
modules-left = ewmh
modules-center = date
modules-right = backlight volume battery

; Tray position and scale
tray-position = right
tray-scale = 1.0
tray-transparent = false
tray-detached = true
tray-offset-x = -4
;
[module/date]
type = internal/date
interval = 2.0
date = "%a, %b %d - %H:%M"

[module/backlight]
type = internal/backlight
interval = 5.0
label =  %percentage%%
card = intel_backlight

[module/volume]
type = internal/volume
interval = 2.0
format-volume-prefix = " "
format-muted-prefix = " "

scroll-up = herbstclient spawn pactl set-sink-volume 0 +5%
scroll-down = herbstclient spawn pactl set-sink-volume 0 -5

[module/battery]
type = internal/battery
battery = BAT0

format-discharging = <ramp-capacity> <label-discharging>

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.ind_color}

ramp-capacity-4 = ""
ramp-capacity-3 = ""
ramp-capacity-2 = ""
ramp-capacity-1 = ""
ramp-capacity-0 = ""

animation-charging-4 = ""
animation-charging-3 = ""
animation-charging-2 = ""
animation-charging-1 = ""
animation-charging-0 = ""
animation-charging-framerate = 750

[module/ewmh]
type = internal/xworkspaces
enable-click = true
enable-scroll = true

label-active = %name%
label-active-foreground = ${colors.fg}
label-active-underline = ${colors.ind_color}
label-active-background = ${colors.bg_alt}
label-active-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.fg}
label-urgent-underline = ${colors.urgent}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.fg}
label-empty-padding = 1

