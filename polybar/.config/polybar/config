[colors]
bg = ${xrdb:polybar.bg_color}
fg = ${xrdb:polybar.text_color}
ind = ${xrdb:polybar.ind_color}
active = ${xrdb:polybar.active_color}
urgent = ${xrdb:polybar.urgent}

[consts]
border=0

[bar/hlwm]
; Background and foreground colors
background = ${colors.bg}
foreground = ${colors.fg}
height = 25

; Bar position offset
offset-x = 0
offset-y = ${consts.border}
border-size = ${consts.border}
border-top-size = 0
border-top-color = ${colors.bg}
border-bottom-size = 0
border-bottom-color = ${colors.bg}
; Corner radius
; radius = 2

; Underline size and color
line-size = 3
line-color = ${colors.ind}

; Padding at either side of the bar
padding-left = 0
padding-right = 2

; Fonts
font-0 = "SFNS Display:style=Regular:size=12;2"
font-1 = "Noto Sans CJK JP:style=Regular:size=12;2"
font-2 = "FontAwesome:style=Regular:size=11;2"

; Module padding
module-margin-left = 2
module-margin-right = 2
; Modules to display, defined below
modules-left = desktops
modules-center = xwindow
modules-right = battery date

;  Tray position and scale
tray-position = right
tray-scale = 1.0
tray-transparent = false
tray-detached = false
tray-offset-x = 0

[module/date]
type = internal/date
interval = 2.0

; date = " "
date = "%a, %b %d -"

time = "%H:%M"
time-alt = "%H:%M"

label = %date% %time%

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.fg}
format-padding = 4
label-maxlen = 100

[module/battery]
type = internal/battery
battery = BAT0

format-discharging = <ramp-capacity> <label-discharging>

format-charging = <animation-charging> <label-charging>

ramp-capacity-4 = " "
ramp-capacity-3 = " "
ramp-capacity-2 = " "
ramp-capacity-1 = " "
ramp-capacity-0 = " "

animation-charging-4 = " "
animation-charging-3 = " "
animation-charging-2 = " "
animation-charging-1 = " "
animation-charging-0 = " "
animation-charging-framerate = 750

[module/desktops]
type = internal/xworkspaces
icon-0 = 1;"一"
icon-1 = 2;"二"
icon-2 = 3;"三"
icon-3 = 4;"四"
icon-4 = 5;"五"
icon-5 = 6;"六"

format = <label-state>

label-active = %icon%
label-active-foreground = ${colors.bg}
#label-active-underline = ${colors.ind}
label-active-background = ${colors.ind}
label-active-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${colors.fg}
label-urgent-background = ${colors.bg}
label-urgent-underline = ${colors.urgent}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.fg}
label-empty-padding = 2

